---
import { categories } from '../../data/category';
---

<div class="container pt-6 pb-2">
  <div class="row">
    {
      categories?.map((category) => (
        <div class="col-6 col-sm-6 col-md-3">
          <div class="d-flex flex-column align-items-center" style="gap: 10px;">
            <img src={category?.icon} style="height: 160px; width: auto;" />
            <p style="font-size: 18px; font-weight: 700; font-family: 'Playfair Display', serif;">{category?.nameId}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
