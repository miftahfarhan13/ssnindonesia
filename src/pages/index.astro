---
import Layout from '../layouts/Layout.astro';
import '../../assets/scss/astro-ecommerce.scss';
import Navbar from '../components/navbar';
import ProductFeature from '../components/productFeature';
import Footer from '../components/footer';
import PromoSectionLarge from '../components/promoSectionLarge';
import ListProduct from '../components/ListProduct/listProduct';
import CategoryProduct from '../components/Home/CategoryProduct.astro';

const productFeature = {
  images: [
    {
      src: 'https://iili.io/J9WroQf.jpg',
      alt: 'first_image'
    },
    {
      src: 'https://iili.io/J9Wr2rN.jpg',
      alt: 'second_image'
    },
    {
      src: 'https://iili.io/J9Wrd1p.jpg',
      alt: 'third_image'
    }
  ],
  featuresDetails: {
    Quality: {
      headlineText: 'Kualitas Utama: ',
      bodyText:
        'Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.'
    },
    Continuity: {
      headlineText: 'Keberlanjutan: ',
      bodyText:
        'Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.'
    },
    Send: {
      headlineText: 'Pengiriman Cepat dan Aman: ',
      bodyText:
        'Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.'
    },
    Services: {
      headlineText: 'Pelayanan Pelanggan Terbaik: ',
      bodyText:
        'Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.'
    }
  }
};

