---
import Layout from "../layouts/Layout.astro";
import "../../assets/scss/astro-ecommerce.scss";
import Navbar from "../components/navbar";
import ProductFeature from "../components/productFeature";
import Footer from "../components/footer";

const productFeature = {
  images: [
    {
      src: "https://iili.io/J9WroQf.jpg",
      alt: "first_image",
    },
    {
      src: "https://iili.io/J9Wr2rN.jpg",
      alt: "second_image",
    },
    {
      src: "https://iili.io/J9Wrd1p.jpg",
      alt: "third_image",
    },
  ],
  featuresDetails: {
    Quality: {
      headlineText: "Kualitas Utama: ",
      bodyText:
        "Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.",
    },
    Continuity: {
      headlineText: "Keberlanjutan: ",
      bodyText:
        "Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.",
    },
    Send: {
      headlineText: "Pengiriman Cepat dan Aman: ",
      bodyText:
        "Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.",
    },
    Services: {
      headlineText: "Pelayanan Pelanggan Terbaik: ",
      bodyText:
        "Produk kami dipilih dengan cermat untuk memastikan rasa dan kesegarannya yang tak tertandingi.",
    },
  },
};
---

<Layout title="Welcome to PT Samudra Sukses Nusantara">
  <Navbar />
  <div class="header">
    <div class="container header-content">
      <div class="title-content text-center">
        <h1 class="title fs-1 fw-bolder text-white">
          Selamat Datang di PT SAMUDRA SUKSES NUSANTARA
        </h1>
        <div class="subtitle fs-3 text-white">
          Menyediakan Kualitas Terbaik dalam Ekspor Produk Laut
        </div>
      </div>
      <div class="body-content text-center text-white">
        Dapatkan pengalaman luar biasa dalam produk laut segar berkualitas
        tinggi. Kami adalah mitra eksportir pilihan untuk ikan dan hasil laut
        terbaik. Kualitas dan layanan unggulan kami adalah jaminan kepuasan
        Anda.
      </div>
      <button id="header-cta" type="button" class="btn btn-light btn-lg fs-5"
        >Lihat Produk Kami</button
      >
    </div>
  </div>
  <div id="product-feature" class="container py-6">
    <ProductFeature
      title="Product Features"
      images={productFeature.images}
      full_description="Society has put up so many boundaries, so many limitations on what’s right and wrong that it’s almost impossible"
      featuresDetails={productFeature.featuresDetails}
    />
  </div>
  <section class="">
    <div
      class="container bg-dark row align-items-center mx-auto p-4 p-md-6 rounded rounded-5"
    >
      <!-- Contact Information -->
      <div class="col-12 col-lg-6 d-flex flex-column gap-2 text-white">
        <h2 class="text-white">Hubungi Kami</h2>
        <span
          ><span class="fw-bolder">Address:</span> Karang Anyar Pantai, Tarakan
          Barat, Tarakan City, North Kalimantan</span
        >
        <span><span class="fw-bolder">Phone:</span> +1 (123) 456-7890</span>
        <span><span class="fw-bolder">Email:</span> ssn@gmail.com</span>
        <span>
          <span class="fw-bolder">Operational Hours:</span>
          <br />
          <span class="fw-bolder">Monday - Friday:</span> 9:00 AM - 5:00 PM
          <br />
          <span class="fw-bolder">Saturday - Sunday:</span> Closed
        </span>
      </div>

      <!-- Google Map -->
      <div class="col-12 col-lg-6 mt-4">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3983.1714728631136!2d117.57591450000001!3d3.3077237999999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32138bbb396b3b1b%3A0xcb912708c710f1c6!2sPT.%20SSN%20H.%20Nur%20Hasan!5e0!3m2!1sen!2sid!4v1694189215122!5m2!1sen!2sid"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </section>
  <div class="container py-4">
    <Footer />
  </div>
</Layout>

<script>
  const headerCta = document.getElementById("header-cta");
  headerCta.addEventListener("click", () => {
    scrollToSection();
  });
  function scrollToSection() {
    // Get a reference to the section you want to scroll to
    var section = document.getElementById("product-feature");

    // Scroll to the section
    section.scrollIntoView({ behavior: "smooth" });
  }
</script>

<style>
  body {
    height: 90vh;
  }
  .header {
    background-image: linear-gradient(rgba(0, 0, 0, 0.527), rgba(0, 0, 0, 0.5)),
      url("../images/bg.jpg");
    background-position: center;
    height: 90vh;
    padding-block: 80px;
  }
  .header-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    align-items: center;
    gap: 40px;
  }
  .contact {
    display: grid;
    gap: 40px;
    justify-content: center;
    align-items: center;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
</style>
